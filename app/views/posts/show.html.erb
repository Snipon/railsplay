<div contenteditable="true" id="editable">
  <h2><%= @post.title %></h2>
  <p>
    <%= @post.text.html_safe %>
  </p>
</div>

<div class="comment-area">
  <h3>Comments</h3>
  <ol class="list-group"><%= render @post.comments %></ol>

  <h3>Add a comment:</h3>
  <%= render "comments/form" %>

  <%= link_to 'Edit Post', edit_post_path(@post), :class => "btn btn-primary" %>
  <%= link_to 'Back to Posts', posts_path, :class => "btn btn-default" %>
</div>